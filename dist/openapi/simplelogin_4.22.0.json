            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful. User is going to receive an email that contains an activation code."
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "account"
        ],
        "summary": "Register",
